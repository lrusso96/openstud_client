<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:iconSpaceReserved="false">
    <PreferenceCategory
        android:title="@string/pref_title_general"
        app:iconSpaceReserved="false">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/key_exam_date"
            android:summary="@string/show_exam_date_description"
            android:title="@string/show_exam_date"
            app:iconSpaceReserved="false" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/key_minmax_remove"
            android:summary="@string/ignore_minmax_exam_description"
            android:title="@string/ignore_minmax_exam"
            app:iconSpaceReserved="false" />
        <EditTextPreference
            android:defaultValue="30"
            android:inputType="number"
            android:key="@string/key_default_laude"
            android:numeric="integer"
            android:title="@string/default_laude"
            android:summary="@string/change_value_30l"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="@string/key_delete"
            android:title="@string/delete_pdf"
            app:iconSpaceReserved="false" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/key_show_changelog"
            android:summary="@string/show_changelog_description"
            android:title="@string/show_changelog"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_title_lessons"
        app:iconSpaceReserved="false">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/key_enable_lesson"
            android:summary="@string/enable_lessons_description"
            android:title="@string/enable_lessons"
            app:iconSpaceReserved="false" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/key_options_lesson"
            android:summary="@string/show_options_lesson_description"
            android:title="@string/show_options_lesson"
            app:iconSpaceReserved="false" />
        <Preference
            android:key="@string/key_add_custom_lesson"
            android:summary="@string/add_custom_lesson_summary"
            android:title="@string/add_custom_lesson"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/pref_title_themes"
        app:iconSpaceReserved="false">
        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="@string/title_theme"
            android:entries="@array/pref_theme"
            android:entryValues="@array/pref_theme_values"
            android:key="@string/key_theme"
            android:summary="@string/summary_theme"
            android:title="@string/title_theme"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/key_security_category"
        android:title="@string/pref_title_security"
        app:iconSpaceReserved="false">

        <CheckBoxPreference
            android:clickable="false"
            android:defaultValue="false"
            android:key="@string/key_biometrics"
            android:summary="@string/enable_biometric_login_description"
            android:title="@string/enable_biometric_login"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

</PreferenceScreen>